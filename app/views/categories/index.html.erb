<% if notice %>
  <p style="color: green;"><%= notice %></p>
<% end %>

<% if alert %>
  <p style="color: red;"><%= alert %></p>
<% end %>

<% content_for :title, "Categories" %>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <p>
      <%= link_to "Show this category", category %>
    </p>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>



<%= form_with model: @invoice, url: invoices_path, local: true, html: { multipart: true } do |form| %>
  <%= form.label :pdf_file, "Upload Invoice (PDF)" %><br>
  <%= form.file_field :pdf_file, accept: 'application/pdf' %><br>
  <%= form.submit "Upload Invoice" %>
<% end %>

